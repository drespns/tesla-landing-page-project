---
import Layout from '../layouts/Layout.astro';

import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import ChargeSection from '../components/ChargeSection.astro';

// import favicon
---

<Layout title="Tesla Landing Page">
	<LandingHeader textColor='text-white' />

	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll-m-2"> <!-- esto lo hacemos para hacer un slider de section's -->
		<div class="snap-center">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ChargeSection />
		</div>
	</main>
</Layout>